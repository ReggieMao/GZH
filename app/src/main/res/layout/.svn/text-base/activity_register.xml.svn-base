<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg">

    <RelativeLayout
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="11dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:src="@mipmap/back"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="215dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:text="@string/register"
            android:textColor="@color/textBlack"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/info_tip"
            android:textColor="@color/textGray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_round_edit_gray6"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:hint="@string/hint_wallet_name"
                android:imeOptions="actionNext"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:singleLine="true"
                android:textColorHint="@color/hint"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="15dp"
                android:background="@color/pageBg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/wallet_name"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_round_edit_gray6"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/textBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="10dp"
                        android:src="@mipmap/down" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_mobile"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="1dp"
                    android:paddingRight="26dp"
                    android:singleLine="true"
                    android:textColorHint="@color/hint"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="17dp"
                android:background="@color/pageBg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/mobile"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_round_edit_gray6"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_code"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:singleLine="true"
                    android:textColorHint="@color/hint"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="17dp"
                    android:background="@color/pageBg"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/code"
                    android:textColor="@color/textGray"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_round_text_gray4"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yes"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_round_edit_gray3">

                <ImageView
                    android:id="@+id/img_yes"
                    android:layout_width="9dp"
                    android:layout_height="7dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yes"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/read_agree"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/service_privacy"
                android:textColor="@color/c3C"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_round_text_gray1"
            android:elevation="4dp"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/slider_select" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/slider" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/slider" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>