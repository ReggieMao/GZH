<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBg">

    <RelativeLayout
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="22dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:src="@mipmap/back"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/gesture_pwd_again"
                    android:textColor="@color/textBlack"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_jump"
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/jump"
                    android:textColor="@color/textGray"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/gesture_tip"
                android:textColor="@color/textGray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/bg_round_edit_gray6" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/pwd_img"
                android:textColor="@color/textGray1"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="282dp"
                android:layout_height="282dp"
                android:layout_gravity="center">

                <com.gzh.gzh.view.GestureView
                    android:id="@+id/gesture_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:autoLink="true"
                    app:enableVibrate="true"
                    app:lineColor="@color/c3C"
                    app:lineColorErr="@color/red"
                    app:lineWidth="2dp"
                    app:nodeOnSrc="@mipmap/gesture_yes"
                    app:nodeOnSrcErr="@mipmap/gesture_no"
                    app:nodeSrc="@drawable/bg_round_text_blue1"
                    app:padding="18dp"
                    app:spacing="18dp"
                    app:vibrateTime="20"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

                <EditText
                    android:id="@+id/et_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent1"
                    android:cursorVisible="false"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/sure"
                android:textColor="@color/c3C"
                android:textSize="24sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/slider" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/slider" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/slider_select" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>