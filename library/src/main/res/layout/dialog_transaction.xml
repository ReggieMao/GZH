<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/sub_layout"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_round_edit_white2">

        <RelativeLayout
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/close"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="28dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/lock"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_pwd"
                android:textColor="@color/c191A45"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"/>
            
        </LinearLayout>

        <com.gzh.library.view.PasswordView
            android:id="@+id/et_pwd"
            android:layout_width="282dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginBottom="80dp"
            app:maxCount="6"
            app:psdType="weChat"
            app:rectAngle="0dp"
            app:divideLineWidth="1dp"
            app:divideLineWidth1="2dp"
            app:borderColor="#C7CCD6"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

    </LinearLayout>

</LinearLayout>
