<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_text_white2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="@string/set_avatar"
                android:textColor="#ACACBC"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <TextView
                android:id="@+id/tv_take"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/take_photo"
                android:textColor="#1B1E46"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/from_photo"
                android:gravity="center"
                android:textColor="#1B1E46"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_round_text_white2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:text="@string/cancel"
            android:textColor="#1B1E46"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
